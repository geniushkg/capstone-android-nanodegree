<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNameHistoryRowWidget"
        android:layout_width="@dimen/tvHistoryRow"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/historyLabelFontSize" />

    <TextView
        android:id="@+id/tvEmailHistoryRowWidget"
        android:layout_width="@dimen/tvHistoryRowEmail"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameHistoryRowWidget"
        android:layout_marginBottom="@dimen/cv_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:hint="@string/hint_email"
        android:textSize="@dimen/historyLabelFontSize" />

    <TextView
        android:id="@+id/tvRatingTextWidget"
        android:layout_width="@dimen/tvHistoryRow"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmailHistoryRowWidget"
        android:layout_marginBottom="@dimen/cv_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/historyLabelFontSize" />

</RelativeLayout>